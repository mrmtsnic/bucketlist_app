<div class="sessions-new">
  <h1>Log in</h1>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with url: login_path, scope: :session do |f| %>
        
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>

        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= link_to "(パスワードを忘れた)", new_password_reset_path %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>ログインしたままにする</span>
        <% end %>

        <%= f.submit "ログイン", class: "btn form-control" %>

        <p>新規登録はお済みですか？ <%= link_to "Sign up", signup_path %></p>

        <P class="mb-0">簡単にログインできます</p>
        <%= link_to "ゲストユーザーでログイン", guest_login_path,
            class: "guest mt-0 btn form-control",
            data: { "turbo-method": :post } %>
      <% end %>
    </div>
  </div>
</div>

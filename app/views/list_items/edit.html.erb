<div class="list-items-edit">
  <h1>編集</h1>
  <div class="row">
    <div class="col-md-6 offset-md-3 mb-5 mt-3">
      <%= form_with model: @list_item do |f| %>
        <%= render "shared/error_messages", object: f.object %>

        <%= f.text_area :content, class: "form-control" %>

        <%= f.submit "編集する", class: "btn form-control" %>
      <% end %>
    </div>
  </div>
</div>